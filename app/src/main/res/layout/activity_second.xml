<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/bg1">

    <TextView
        android:id="@+id/textSecond"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="***"
        android:textSize="@dimen/textTagSize"
        android:textColor="@color/white"
        android:padding="@dimen/padding"
        android:background="@color/hotBar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding2"/>

    <ImageView
        android:id="@+id/imageSecond"
        android:layout_width="@dimen/imgSize"
        android:layout_height="@dimen/imgSize"
        android:layout_gravity="center"
        android:orientation="horizontal"/>

</LinearLayout>